{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "db:gen": {
      "inputs": [
        "prisma/schema.prisma"
      ],
      "cache": false
    },
    "db:push": {
      "inputs": [
        "prisma/schema.prisma"
      ],
      "cache": false
    },
    "db:migrate:dev": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^db:gen"
      ],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build",
        "^db:gen"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": [
        "^db-generate"
      ],
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ]
}
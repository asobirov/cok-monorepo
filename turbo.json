{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    ".env",
    "NODE_ENV"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "clean": {},
    "dev": {
      "cache": false
    },
    "@cok/monorepo#dev": {
      "cache": false,
      "dependsOn": [
        "@cok/db#dev"
      ]
    },
    "db:gen": {
      "dependsOn": [
        "^db:gen"
      ]
    },
    "db:push": {
      "outputs": []
    },
    "db:studio": {
      "outputs": []
    },
    "postinstall": {}
  }
}
{
  "name": "@cok/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:gen": "turbo run db:gen",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "postinstall": "turbo run postinstall"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest",
    "vercel-submodules": "^1.0.6"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.13.3"
}
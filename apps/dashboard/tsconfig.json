{
  "extends": "@cok/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@lib/*": [
        "./src/pages/lib/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@server/*": [
        "./src/server/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}